<main class="mbs-body">
  <form class="form" id="donate-book-form">
    <h2>Enter information for the book you are donating:</h2>

    <table style="width: 100%">
      <tbody>
        <tr>
          <td><label for="isbn">ISBN:</label></td>
          <td><input class="form-input" type="text" id="donate-isbn" /></td>
        </tr>
        <tr>
          <td><label for="title">Title:</label></td>
          <td><input
              style="width:400px"
              class="form-input"
              type="text"
              id="donate-title"
              required
            /></td>
        </tr>
        <tr>
          <td><label for="author">Author, First:</label></td>
          <td><input
              style="width:400px"
              class="form-input"
              type="text"
              id="donate-author-first"
              required
            /></td>
        </tr>
        <tr>
          <td><label for="author">Author, Last:</label></td>
          <td><input
              style="width:400px"
              class="form-input"
              type="text"
              id="donate-author-last"
              required
            /></td>
        </tr>
        <tr>
          <td><label for="genre">Genre:</label></td>
          <td>
            <select class="form-input" name="genres" id="donate-genre">
              {{#each genres as |genre|}}
                <option value="{{genre.name}}">{{genre.name}}</option>
              {{/each}}
            </select>
          </td>
        </tr>
        <tr>
          <td><label for="rating">Rating:</label></td>
          <td>
            <select class="form-input" name="ratings" id="donate-rating">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
            </select>
          </td>
        </tr>
        <tr>
          <td><label for="condition">Condition:</label></td>
          <td>
            <select class="form-input" name="conditions" id="donate-condition">
              {{#each conditions as |condition|}}
                <option value="{{condition.state}}">{{condition.state}}</option>
              {{/each}}
            </select>
          </td>
        </tr>
        <tr>
          <td><br /></td>
        </tr>
        <tr>
          <td></td>
          <td><button onclick="donateBook()">Donate Book</button></td>
        </tr>
      </tbody>
    </table>
  </form>
</main>

<style>
  #donate-book-form td {padding-right: 10px}
</style>